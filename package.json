    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@wxt-dev/module-react": "^1.1.1",
    "prettier": "3.3.3",
    "typescript": "^5.6.2",
    "wxt": "^0.19.11"
  }
